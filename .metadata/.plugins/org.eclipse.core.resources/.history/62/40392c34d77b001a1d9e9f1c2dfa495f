package com.santosh.management.mapper;

import org.springframework.stereotype.Component;

import com.santosh.management.dto.input.UsersDto;
import com.santosh.management.entity.Users;

import ma.glasnost.orika.MapperFactory;
import ma.glasnost.orika.impl.ConfigurableMapper;
import ma.glasnost.orika.metadata.ClassMapBuilder;

@Component
public class UserMapper extends ConfigurableMapper {

	@Override
	protected void configure(MapperFactory factory) {
		ClassMapBuilder<UsersDto, Users> DtoToEntity = factory.classMap(UsersDto.class, Users.class);
		DtoToEntity.byDefault().register();
	}

}
